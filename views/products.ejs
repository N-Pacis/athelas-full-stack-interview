<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles.css">
    <title><%= title %></title>
</head>
<body>
    <h2 class="app-title"><%= title %> </h2>
    <% if(error) { %>
        <p><%= error %></p>
    <% } %>
    
    <a href="/add" class="add-product-btn">Add Product</a>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product=>{ %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td><img src="<%= product.image %> " alt="<%= product.name %>" class="product-image"></td>
                    <td><a href="/view/<%= product.id %>" class="view-btn">View</a></td>
                    <td><a href="/edit/<%= product.id %>" class="edit-btn">Edit</a></td>
                    <td><a href="/delete/<%= product.id %>" class="delete-btn">Delete</a></td>
                </tr>
            <% })%>
        </tbody>
    </table>
</body>
</html>